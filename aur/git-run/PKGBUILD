# Maintainer: Borja Ruiz <borja [at] libcrack [dot] so>
_npmname=git-run
_npmver=
pkgname="nodejs-${_npmname}-git"
pkgver=0.3.1
pkgrel=1
pkgdesc="A tool for managing multiple git repositories"
arch=(any)
url="https://github.com/mixu/gr"
license=('BSD')
depends=('nodejs')
optdepends=()
provides=('nodejs-git-run')
#source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
#noextract=($_npmname-$_npmver.tgz)
#sha1sums=(34a59d4a90c1501d491ea87d478d26c877808415)
source=("$pkgname"::'git+https://github.com/mixu/gr.git')
sha1sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  #git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g;s/^v//' | cut -f1-3 -d.
  git describe | sed -E 's/([^-]*-g)/r\1/;s/-/./g;s/^v//' | cut -f1-3 -d.
}

package() {
  cd $srcdir
  local _npmdir="${pkgdir}/usr/lib/node_modules/"
  local _npmver="${pkgver}"
  mkdir -p "${_npmdir}"
  cd "${_npmdir}"
  npm install -g --prefix "$pkgdir/usr" "${_npmname}@${_npmver}"
  install -D -m 644 /usr/share/apps/LICENSES/BSD "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
